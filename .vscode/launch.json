    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "file": "${workspaceFolder}/index.html",
            "pathMappings": [
                {
                    "url": "${workspaceFolder}/main.js",
                    "path": "${workspaceFolder}/index.html"
                },
                {
                    "url": "${workspaceFolder}/bp.js",
                    "path": "${workspaceFolder}/index.html"
                }
            ]
        }
    ]
}